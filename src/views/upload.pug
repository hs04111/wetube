extends base.pug



block content
    if errMessage
        span=errMessage
    form(method="POST")
        input(placeholder="Title" name="title" required maxlength=80)
        input(placeholder="Description" name="description" required minlength=20)
        input(placeholder="Hashtags separated by comma" name="hashtags" required)
        input(value="Upload Video" type="submit" )