extends ../base.pug



block content
    div 
        button#startBtn Start Recording
    if errMessage
        span=errMessage
    form(method="POST", enctype='multipart/form-data')
        label(for="video") Video File
        input(type="file", accept="video/*", id="video", name="video")
        input(placeholder="Title" name="title" required maxlength=80)
        input(placeholder="Description" name="description" required minlength=20)
        input(placeholder="Hashtags separated by comma" name="hashtags" required)
        input(value="Upload Video" type="submit" )

block scripts 
    script(src="/static/js/recorder.js") 